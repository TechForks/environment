#!/usr/bin/env ruby -w

#
# Copyright (c) 2013 by Lifted Studios.  All Rights Reserved.
#

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require 'English'
require 'fileutils'
require 'shell_utilities'

include FileUtils
include ShellUtilities

dir = climb { |d| File.exists?(File.join(d, 'Rakefile')) }

if dir.nil?
  puts 'No build system detected'
  exit 1
end

command = ['rake', ARGV].flatten.join(' ')
command = "bundle exec #{command}" if File.exists?(File.join(dir, 'Gemfile'))

cd(dir) { sh command }
exit $CHILD_STATUS
